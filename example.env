# Basic Next.js environment variables - copy to .env for local development
DATABASE_URL="file:./dev.db" # for local development with SQLite .env
# DATABASE_URL="postgres://user:password@postgres:5432/database?sslmode=disable" # For docker env.production
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# R2 (Cloudflare R2 object storage) configuration
R2_USE_R2="true or false"
R2_ACCOUNT_ID="id"
R2_ACCESS_KEY_ID="keyid"
R2_SECRET_ACCESS_KEY="accesskey"
R2_BUCKET_NAME="bucket-name"
UPLOADS_URL="R2_DEV_URL" # no longer needed with api/files

# Optional Drupal 6 migration script
DRUPAL_DB_HOST="localhost"
DRUPAL_DB_PORT="3307"
DRUPAL_DB_USER="user"
DRUPAL_DB_PASSWORD="password"
DRUPAL_DB_NAME="dbname"
DRUPAL_SITE="example.com"
DRUPAL_FILES_DIR="/Users/user/drupal_site/" # used for drupal migration files copy
LOCAL_FILES_DIR="./public/files" # used to copy local files from drupal site files
AUTHOR_DEFAULT_ID="hash" # used to assign articles to a default author for drupal migration