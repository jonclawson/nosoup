# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# Vercel Configuration
vercel_api_token       = "your-vercel-api-token"
vercel_project_name    = "nosoup"

# Neon Database Configuration
# Get your API key from: https://console.neon.tech/app/settings/api-keys
# Get your org ID from: https://console.neon.tech/app/settings/general
neon_api_key           = "your-neon-api-key"
neon_org_id            = "your-neon-org-id"
neon_project_name      = "nosoup-db"
neon_region            = "aws-us-east-2"
database_name          = "nosoup"

# NextAuth Configuration
nextauth_url           = "https://your-app.vercel.app"
nextauth_secret        = "your-nextauth-secret"

# Cloudflare R2 Configuration (for file storage)
cloudflare_api_token   = "your-cloudflare-api-token"
cloudflare_account_id  = "your-cloudflare-account-id"
r2_bucket_name         = "nosoup-uploads"
r2_bucket_location     = "WNAM"
r2_access_key_id       = "your-r2-access-key-id"
r2_secret_access_key   = "your-r2-secret-access-key"
